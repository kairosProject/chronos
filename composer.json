{
	"name": "kairos/chronos",
	"description": "The Kairos project API",
    "type": "project",
    "license": "proprietary",
    "require": {
		"php": "^7.1.3",
		"ext-iconv": "*",
		"alcaeus/mongo-php-adapter": "^1.1",
		"doctrine/mongodb-odm-bundle": "^3.4",
		"nelmio/api-doc-bundle": "^3.1",
		"predis/predis": "^1.1",
		"snc/redis-bundle": "^2.0",
		"symfony/asset": "^4.0",
		"symfony/console": "^4.0",
		"symfony/flex": "^1.0",
		"symfony/framework-bundle": "^4.0",
		"symfony/lts": "^4@dev",
		"symfony/monolog-bundle": "^3.1",
		"symfony/security-bundle": "^4.0",
		"symfony/serializer": "^4.0",
		"symfony/yaml": "^4.0"
	},
    "require-dev": {
		"doctrine/data-fixtures": "^1.3",
		"infection/infection": "^0.7.1",
		"phpmd/phpmd": "^2.6",
		"phpmetrics/phpmetrics": "^2.3",
		"phpunit/phpunit": "^7.0",
		"sebastian/phpcpd": "^4.0",
		"squizlabs/php_codesniffer": "^3.2",
		"symfony/dotenv": "^4.0",
		"symfony/maker-bundle": "^1.1",
		"symfony/profiler-pack": "^1.0"
	},
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "Chronos\\": "src/Chronos"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install --symlink --relative %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
			"id": "01C74E752KNRVG07QC9FZ5QFP0",
			"allow-contrib": true
		}
    }
}
